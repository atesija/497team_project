<Window x:Class="ToDoApp.ItemModalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Item" Height="300" Width="300" ResizeMode="NoResize">
    <Grid>
      <TextBox Height="28" HorizontalAlignment="Right" Margin="0,12,24,0" Name="itemNameBox" VerticalAlignment="Top" Width="159" KeyDown="itemNameBox_KeyDownHandler" />
        <Label Content="Item Name" Height="28" HorizontalAlignment="Left" Margin="12,12,0,0" Name="itemNameLabel" VerticalAlignment="Top" Width="77" />
        <Button Content="Confirm" Height="23" HorizontalAlignment="Left" Margin="23,226,0,0" Name="confirmButton" VerticalAlignment="Top" Width="75" Click="add_Click" />
      <TextBox Height="102" HorizontalAlignment="Left" Margin="12,68,0,0" Name="itemDescriptionBox" VerticalAlignment="Top" Width="254" KeyDown="itemDescriptionBox_KeyDownHandler" />
        <Label Content="Item Description" Height="28" HorizontalAlignment="Left" Margin="12,46,0,0" Name="itemDescriptionLabel" VerticalAlignment="Top" Width="102" />
        <Label Content="Rating:" Height="28" HorizontalAlignment="Left" Margin="12,184,0,0" Name="ratingLabel" VerticalAlignment="Top" Width="47" />
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="65,189,0,0" Name="ratingBox" VerticalAlignment="Top" Width="120" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Left" Margin="179,226,0,0" Name="cancelButton" VerticalAlignment="Top" Width="75" Click="cancelButton_Click" />
    </Grid>
</Window>
