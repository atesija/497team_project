<Window x:Class="ToDoApp.LoginFileDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New File" Height="120" Width="290" ResizeMode="NoResize">
        
    <Grid Margin="0,0,0,0">
        <TextBox Height="29" HorizontalAlignment="Right" Margin="0,10,10,0" Name="titleTextBox" VerticalContentAlignment="Center" VerticalAlignment="Top" Width="205" KeyDown="titleTextBox_KeyDownHandler" />
        <Label Content="Name" FontWeight="Bold" Height="29" HorizontalAlignment="Left" Margin="10,10,0,0" Name="titleLabel" VerticalAlignment="Top" Width="47" />
        <Button Content="Confirm" Height="21" HorizontalAlignment="Right" Margin="0,0,95,10" Name="confirmButton" VerticalAlignment="Bottom" Width="75" Click="confirm_Click" Grid.Column="1" />
        <Button Content="Cancel" Height="21" HorizontalAlignment="Right" Margin="0,0,10,10" Name="cancelButton" VerticalAlignment="Bottom" Width="75" Click="cancel_Click" Grid.Column="1" />
    </Grid>
</Window>