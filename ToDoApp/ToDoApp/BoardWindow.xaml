<Window x:Class="ToDoApp.BoardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Board" Height="350" Width="525">
    <Grid>
        <ListBox Height="258" HorizontalAlignment="Left" Margin="12,12,0,0" Name="listbox" VerticalAlignment="Top" Width="479" SelectionChanged="listBox1_SelectionChanged" />
        <Button Content="Add New List" Height="23" HorizontalAlignment="Left" Margin="12,276,0,0" Name="add" VerticalAlignment="Top" Width="130" Click="add_Click" />
        <Button Content="Open Selected List" Height="23" HorizontalAlignment="Left" Margin="184,276,0,0" Name="open" VerticalAlignment="Top" Width="130" Click="open_Click" />
        <Button Content="Delete Selected List" Height="23" HorizontalAlignment="Left" Margin="361,276,0,0" Name="delete" VerticalAlignment="Top" Width="130" Click="delete_Click" />
    </Grid>
</Window>
