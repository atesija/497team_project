<UserControl x:Class="ToDoApp.BoardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="300" Width="475
             ">
   <Grid>
      <Label Content="Boards" FontWeight="Bold" FontSize="15" Height="29" HorizontalAlignment="Left" Margin="10,10,0,0" Name="boardLabel" VerticalAlignment="Top" Width="124" />
      <Button Content="Back" Height="23" HorizontalAlignment="Right" Margin="0,10,12,0" Name="back" VerticalAlignment="Top" Width="90" Click="logout_Click" />
      <ListBox Height="210" HorizontalAlignment="Center" Margin="10,43,10,10" Name="listBox" VerticalAlignment="Top" Width="453" MouseDoubleClick="openBoard">
      <ListBox.ItemTemplate>
         <DataTemplate>
            <TextBlock Text="{Binding}" FontSize="18" Height="30"/>
         </DataTemplate>
      </ListBox.ItemTemplate>
      </ListBox>
      <Button Content="Add New Board" Height="23" HorizontalAlignment="Left" Margin="10,265,0,0" Name="add" VerticalAlignment="Top" Width="130" Click="addBoard" />
        <Button Content="Edit Selected Board" Height="23" HorizontalAlignment="Left" Margin="150,265,0,0" Name="open" VerticalAlignment="Top" Width="130" Click="editBoard" />
        <Button Content="Delete Selected Board" Height="23" HorizontalAlignment="Right" Margin="0,265,12,0" Name="delete" VerticalAlignment="Top" Width="130" Click="deleteBoard" />
    </Grid>
</UserControl>
